@functions{
    // 取得產品分類
    string getClass(string imgPath)
    {
        Regex reg = new Regex("img/(.+?)/");
        Match m = reg.Match(imgPath);
        Group g = m.Groups[1];

        return g.Value;
    }

    int getCount(string kind, int cnt)
    {
        var Q = Model.Where(o => o.ProductPhotoL.IndexOf(kind) != -1);
        return Q.Count() + 1;
    }
}

<!-- 單一商品 -->
@helper productCard(string imgpath, string pName, string pIntro, int? price, int cnt)
{
    <div class="single_food_item media">
        <img src="@imgpath" class="mr-3 seeFoodDetail" onclick="currentSlide(cnt)" alt="...">
        <div class="media-body align-self-center">
            <h3>@pName</h3>
            <p>@pIntro</p>
            <h5>$ @price</h5>

            <!--按鈕集合-->
            <ul class="footItemIconGruop">
                <li>
                    <!--連結到imagemodal-->
                    <span class="seePicBtn seeFoodDetail" onclick="currentSlide(cnt)">
                        <i class="fas fa-search"></i>
                    </span>
                </li>
                <li>
                    <a class="addCartBtn" href="#">
                        <i class="fas fa-cart-plus"></i>
                    </a>
                </li>
                <li>
                    <a class="addLoveBtn" href="#">
                        <i class="fas fa-heart"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
}

<!-- 印出分類過的菜單 -->
@helper printMenu(string kind, int cnt)
{
    foreach (var item in Model)
    {
        if (getClass(item.ProductPhotoS) != kind)
        {
            continue;
        }
        <div class="col-sm-6 col-lg-6">
            @productCard(item.ProductPhotoS, item.ProductName, item.ProductIntroduction, item.UnitPrice, cnt)
        </div>
    }
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8.11.7/dist/sweetalert2.all.min.js"></script>

<script>
    var check = false;

    function changeVal(el) {

        var qt = parseFloat(el.parent().children(".qt").html());

        //尋找this內，所有節點(含父節點、子節點)類別名稱為price
        //var price = parseFloat(el.parent().children(".price").html());
        var price = parseFloat(el.siblings(".price").html());

        var eq = Math.round(price * qt * 100) / 100;

        el.parent().children(".full-price").html(eq + "");


        changeTotal();
    }

    function changeTotal() {

        var price = 0;

        $(".full-price").each(function (index) {
            price += parseFloat($(".full-price").eq(index).html());
        });



        price = Math.round(price * 100) / 100;
        var discount = parseInt($(".discount").html());
        var shipping = parseFloat($(".shipping").html());
        var fullPrice = Math.round((price + shipping + discount) * 100) / 100;

        if (price == 0) {
            fullPrice = 0;
        }

        $(".subtotal").html(price);
        $(".discount").html(discount);
        $(".total").html(fullPrice);
    }

    $(document).ready(function () {

        $(".remove").click(function () {
            var el = $(this);
            el.parent().parent().addClass("removed");
            window.setTimeout(
                function () {
                    el.parent().parent().slideUp('fast', function () {
                        el.parent().parent().remove();
                        if ($(".product").length == 0) {
                            if (check) {
                                $("#cart").html("<h1>The shop does not function, yet!</h1>");
                            } else {
                                $("#cart").html("<h1>購物車內目前沒有商品</h1>");
                            }
                        }
                        changeTotal();
                    });
                }, 200);
            var id = getIndex(this.id)
            $.ajax({
                method: "GET",
                url: "@Url.Action("DelCart")?pID=" + id
            })

        });

        function getIndex(rawId) {
            var reg = /\d{1,2}/
            var id = reg.exec(rawId)
            return id
        }

        $(".qt-plus").click(function () {
            $(this).parent().children(".qt").html(parseInt($(this).parent().children(".qt").html()) + 1);

            $(this).parent().children(".full-price").addClass("added");

            var el = $(this);
            window.setTimeout(function () { el.parent().children(".full-price").removeClass("added"); changeVal(el); }, 150);
        });

        $(".qt-minus").click(function () {

            child = $(this).parent().children(".qt");

            if (parseInt(child.html()) > 1) {
                child.html(parseInt(child.html()) - 1);
            }

            $(this).parent().children(".full-price").addClass("minused");

            var el = $(this);
            window.setTimeout(function () { el.parent().children(".full-price").removeClass("minused"); changeVal(el); }, 150);
        });

        window.setTimeout(function () { $(".is-open").removeClass("is-open") }, 1200);


    });


    //section的顯示=======================================================
    var currentSection = 0;

    showSection(currentSection);

    // Display the current section
    function showSection(n) {
        var section = document.getElementsByClassName('sectionTab');
        section[n].style.display = "block";
    }

    $(function () {

        $('.next-btn').click(function () {
            $('#fillDate').show();
            $('#cartList').hide();

        });

        $('.return-btn').click(function () {
            $('#cartList').show();
            $('#fillDate').hide();

        });

    });


    //「送出訂單」messageBox=====================================
    $(function () {

        $('.submit-btn').click(function () {
            Swal.fire({
                title: '確定要送出訂單嗎?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009933',
                cancelButtonColor: '#d33',
                cancelButtonText: '取消',
                confirmButtonText: '確定'
            }).then((result) => {
                if (result.value) {
                    Swal.fire(
                        '送出訂單完成',
                        '您可以到【訂單明細】查詢結果',
                        'success'
                    )
                }
            });

        });


    });



</script>
@functions{
    // 產品敘述分段
    static List<string> getDescribtion(string dcrb)
    {

        List<string> result = new List<string>();

        int start = 0;
        int end = dcrb.IndexOf("。") + 1;
        int dst = end - start;

        while (end != 0)
        {
            result.Add(dcrb.Substring(start, dst));
            start = end;
            end = dcrb.IndexOf("。", start) + 1;
            dst = end - start;
        }

        return result;
    }
}
        //    //Lab要自動打開,所以網頁在load時顏色會閃一下
        //    //所以移除一開始的顏色功能
        //    $('.accordion').removeClass('active');
        //})
        ////自動打開 手風琴Lab
        //$('.accordion').click();
    })
    //自動打開 第一頁分頁的Lab
    document.getElementById("defaultOpen").click();
</script>

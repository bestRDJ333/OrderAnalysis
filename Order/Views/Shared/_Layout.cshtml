        <!--start 購物車-->
        <div class="container-fluid">
            @{ Html.RenderAction("ShopCart");}


        </div>
        <!--end 購物車-->
        @RenderBody()
        <!--必要! 為了把footer置底用-->
        <div class="push"></div>
    </div>
    <!--start Footer -->
